FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code (this gets overridden by volume mount in docker-compose)
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Run dev server with host flag for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]